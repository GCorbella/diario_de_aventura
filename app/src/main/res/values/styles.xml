<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GlobalTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="GlobalEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="GlobalButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/brown</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="GlobalImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/brown</item>
    </style>
    <style name="GlobalSpinnerTextStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="GlobalCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/wax</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>